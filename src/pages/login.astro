// Server-side code here
---

<div class="min-h-screen flex items-center justify-center bg-black py-12 px-4 sm:px-6 lg:px-8">
  <div class="flex gap-8 items-center max-w-5xl w-full">
    <div class="flex-1 hidden lg:block">
      <img src="/images/Baba Jaan Master Piece-flipped .png" alt="Baba Jaan" class="w-full h-auto rounded-lg">
    </div>
    <div class="max-w-md w-full space-y-8">
    <div class="flex flex-col items-start">
      <div class="mb-6">
        <span class="text-[#4169E1] text-5xl font-bold">Haider Namah</span>
      </div>
      <h2 class="text-4xl font-bold text-white mb-2">
        Sign in
      </h2>
      <p id="form-switch-text" class="text-gray-400">
        Don't have an account? <a href="#" class="text-white border-b-2 border-yellow-400 no-underline" id="show-signup">Sign up</a>
      </p>
    </div>

    <!-- OAuth Buttons -->
    <div class="space-y-3">
      <button type="button" class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg bg-white text-gray-800 hover:bg-gray-50 transition-colors">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Sign in with Google
      </button>
    </div>

    <div class="relative my-6">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-700"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-black text-gray-400">OR</span>
      </div>
    </div>

<!-- Sign Up Form -->
    <form id="signup-form" class="space-y-4 hidden">
      <!-- Error/Success Message -->
      <div id="error-message" class="hidden rounded-lg p-4"></div>
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="first-name" class="sr-only">First Name</label>
            <input id="first-name" name="first-name" type="text" autocomplete="given-name" required
              class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
              placeholder="First Name">
          </div>
          <div>
            <label for="last-name" class="sr-only">Last Name</label>
            <input id="last-name" name="last-name" type="text" autocomplete="family-name" required
              class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
              placeholder="Last Name">
          </div>
        </div>
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="signup-email" name="email" type="email" autocomplete="email" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="name@example.com">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="signup-password" name="password" type="password" autocomplete="new-password" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Password">
        </div>
        <div>
          <label for="confirm-password" class="sr-only">Confirm Password</label>
          <input id="confirm-password" name="confirm-password" type="password" autocomplete="new-password" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Confirm Password">
        </div>
        <div>
          <label for="phone" class="sr-only">Phone Number</label>
          <input id="phone" name="phone" type="tel" autocomplete="tel" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Phone Number">
        </div>
        <div>
          <label for="address" class="sr-only">Address</label>
          <textarea id="address" name="address" rows="3" autocomplete="street-address" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Address"></textarea>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-white">Are you a Mureed?</span>
          <label class="inline-flex items-center">
            <input type="radio" name="isMureed" value="yes" class="form-radio text-blue-600">
            <span class="ml-2 text-white">Yes</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="isMureed" value="no" class="form-radio text-blue-600">
            <span class="ml-2 text-white">No</span>
          </label>
        </div>
      </div>

      <div class="mt-6">
        <button type="submit"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg text-white bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 hover:from-blue-700 hover:via-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300">
          Create Account
        </button>
      </div>
    </form>

    <!-- Password Reset Form -->
    <form id="reset-password-form" class="space-y-4 hidden">
      <div class="space-y-4">
        <div>
          <label for="new-password" class="sr-only">New Password</label>
          <input id="new-password" name="new-password" type="password" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="New Password">
        </div>
        <div>
          <label for="confirm-new-password" class="sr-only">Confirm New Password</label>
          <input id="confirm-new-password" name="confirm-new-password" type="password" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Confirm New Password">
        </div>
      </div>

      <div class="mt-6">
        <button type="submit"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300">
          Reset Password
        </button>
      </div>
    </form>

    <!-- Sign In Form -->
    <form id="signin-form" class="space-y-4 block">
      <div class="space-y-4">
        <div>
          <label for="signin-email" class="sr-only">Email address</label>
          <input id="signin-email" name="email" type="email" autocomplete="email" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="name@example.com">
        </div>
        <div>
          <label for="signin-password" class="sr-only">Password</label>
          <input id="signin-password" name="password" type="password" autocomplete="current-password" required
            class="appearance-none block w-full px-3 py-2 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm"
            placeholder="Password">
        </div>
        <div class="flex items-center justify-end">
          <button type="button" id="forgot-password" class="text-sm text-blue-400 hover:text-blue-500">
            Forgot your password?
          </button>
        </div>
      </div>

      <div class="mt-6">
        <button type="submit"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300">
          Sign in
        </button>
      </div>
    </form>

    <div class="mt-8 text-center text-sm text-gray-400">
      Made with love in Stockholm.
    </div>
  </div>
</div>

<script>
  // @ts-nocheck
  import { setupLoginForm } from '../utils/login';
  import { supabase } from '../lib/supabaseClient';

  // Initialize login form functionality
  document.addEventListener('DOMContentLoaded', async () => {
    await setupLoginForm(supabase);
  });

  // Handle OAuth sign in
  const googleSignInButtons = document.querySelectorAll('button[type="button"]');
  googleSignInButtons.forEach(button => {
    button.addEventListener('click', async () => {
      try {
        const { error } = await supabase.auth.signInWithOAuth({
          provider: 'google',
          options: {
            redirectTo: `${window.location.origin}/`
          }
        });
        
        if (error) throw error;
      } catch (error) {
        console.error('OAuth error:', error);
      }
    });
  });
</script>
