---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const featuredContent = [
  {
    video: {
      title: 'Latest Khitabat',
      thumbnail: 'https://images.unsplash.com/photo-1507679799987-c73779587ccf?auto=format&fit=crop&q=80',
      url: '/khitabat'
    }
  },
  {
    video: {
      title: 'Bazm-e-Haider',
      thumbnail: 'https://images.unsplash.com/photo-1541339907198-e08756dedf3f?auto=format&fit=crop&q=80',
      url: '/bazm-e-haider'
    }
  },
  {
    video: {
      title: 'Latest Podcasts',
      thumbnail: 'https://images.unsplash.com/photo-1478737270239-2f02b77fc618?auto=format&fit=crop&q=80',
      url: '/podcasts'
    }
  }
];
---

<Layout title="Welcome to HaiderNamah">
  <main>
    <!-- Hero Section -->
    <div class="w-full min-h-[50vh] bg-gradient-to-br from-gray-50 via-gray-100 to-gray-200 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-5 bg-[radial-gradient(circle_at_1px_1px,#000_1px,transparent_0)] [background-size:24px_24px]"></div>
      <div class="container mx-auto min-h-[50vh] px-4">
        <div class="flex flex-col md:flex-row min-h-[50vh] items-center">
          <!-- Left side - Image -->
          <div class="w-full md:w-1/2 flex items-center justify-center p-4 md:p-8">
            <div class="relative w-full max-w-md p-2 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-lg backdrop-blur-sm">
              <div class="absolute inset-0 border-2 border-purple-500/20 rounded-lg transform rotate-3"></div>
              <img 
                src="/images/Baba Jaan Master Piece-flipped .png" 
                alt="Qutbe Madinah Sarkar Haji Ghulam Haider Qadri Ziaye" 
                class="relative z-10 w-full h-auto object-contain rounded-lg shadow-2xl transform hover:scale-105 transition-transform duration-300"
              />
            </div>
          </div>
          
          <!-- Right side - Text -->
          <div class="w-full md:w-1/2 p-4 md:p-8 text-center md:text-left">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
              <span class="block mb-3 text-purple-600 dark:text-purple-400">Qutbe Madinah</span>
              <span class="block bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 text-transparent bg-clip-text mb-3">
                Sarkar Haji Ghulam Haider
              </span>
              <span class="block text-red-600 dark:text-red-400">Qadri Ziaye</span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mt-4">
              Embark on a spiritual journey through divine knowledge and wisdom
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Content Section -->
    <div class="max-w-7xl mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredContent.map((content) => (
          <Card video={content.video} />
        ))}
      </div>
    </div>
  </main>
</Layout>
